{
  "env": {
    "browser": true,
    "webextensions": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "script"
  },
  "root": true,
  "parser": "@babel/eslint-parser",
  "rules": {
    "curly": ["error", "all"],
    "eqeqeq": ["error", "always"],
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never",
      {
        "beforeStatementContinuationChars": "never"
      }
    ],
    "strict": [
      "error",
      "global"
    ],
    "yoda": [
      "error",
      "always"
    ]
  }
}
